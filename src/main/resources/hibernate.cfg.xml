<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">


<hibernate-configuration>
    <session-factory>

        <!-- Connection settings -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/postgres</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">ED6464</property>
        <!-- SQL dialect -->

        <!-- Print executed SQL to stdout -->
        <property name="show_sql">true</property>

        <!-- Update database on startup -->
        <property name="hibernate.hbm2ddl.auto">validate</property>
        <mapping class="pg.CashDesks"/>
        <mapping class="pg.Clients"/>
        <mapping class="pg.Deliveries"/>
        <mapping class="pg.ProductDeliveries"/>
        <mapping class="pg.Products"/>
        <mapping class="pg.ProductSales"/>
        <mapping class="pg.ProviderProducts"/>
        <mapping class="pg.Providers"/>
        <mapping class="pg.Roles"/>
        <mapping class="pg.Sales"/>
        <mapping class="pg.Users"/>

    </session-factory>
</hibernate-configuration>